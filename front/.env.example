# =================================================================
# LIBRECHAT CONFIGURATION - EXAMPLE
# =================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with real secrets to version control

# =================================================================
# CORE CONFIGURATION
# =================================================================
HOST=0.0.0.0
PORT=3080

# =================================================================
# DATABASE
# =================================================================
MONGO_URI=mongodb://mongodb:27017/LibreChat

# =================================================================
# SEARCH (MeiliSearch)
# =================================================================
MEILI_HOST=http://meilisearch:7700
MEILI_NO_ANALYTICS=true

# =================================================================
# SECURITY - GENERATE NEW SECRETS FOR PRODUCTION!
# =================================================================
# Generate with: openssl rand -base64 64
JWT_SECRET=GENERATE_NEW_SECRET_WITH_openssl_rand_-base64_64
JWT_REFRESH_SECRET=GENERATE_NEW_SECRET_WITH_openssl_rand_-base64_64

# Generate with: openssl rand -hex 32
CREDS_KEY=GENERATE_NEW_SECRET_WITH_openssl_rand_-hex_32
CREDS_IV=GENERATE_NEW_SECRET_WITH_openssl_rand_-hex_16

# =================================================================
# SESSION
# =================================================================
SESSION_EXPIRY=900000
REFRESH_TOKEN_EXPIRY=604800000

# =================================================================
# CUSTOM API (Your RAG Server)
# =================================================================
CUSTOM_API_KEY=your-secure-api-key
RAG_API_URL=http://host.docker.internal:8080/api/chat
DEFAULT_COLLECTION=btp

# =================================================================
# APP SETTINGS
# =================================================================
APP_TITLE=BTP RAG
ALLOW_REGISTRATION=false
ALLOW_EMAIL_LOGIN=true
ALLOW_SOCIAL_LOGIN=false
ALLOW_SOCIAL_REGISTRATION=false

# =================================================================
# DEBUG (Set to true for troubleshooting)
# =================================================================
DEBUG_CONSOLE=false
DEBUG_LOGGING=false
