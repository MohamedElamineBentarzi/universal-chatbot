# =================================================================
# SERVER CONFIGURATION - EXAMPLE
# =================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with real secrets to version control

# =================================================================
# DATABASE
# =================================================================
ELASTICSEARCH_URL=http://localhost:9200
QDRANT_URL=http://localhost:6333

# =================================================================
# OLLAMA / LLM
# =================================================================
OLLAMA_BASE_URL=http://localhost:11434

# For cloud Ollama (uncomment and set key):
# OLLAMA_API_KEY=your-ollama-api-key-here

# =================================================================
# FILE SERVER
# =================================================================
# Internal URL for server-to-fileserver communication
FILESERVER_BASE=http://localhost:7700
# Public URL for browser-accessible links (defaults to FILESERVER_BASE)
# FILESERVER_PUBLIC_URL=http://localhost:7700

# =================================================================
# SERVER
# =================================================================
SERVER_BASE_URL=http://localhost:8080

# =================================================================
# AUTHENTICATION (REQUIRED for production)
# =================================================================
# Format: token1:user_id1:name1,token2:user_id2:name2
# WARNING: Set this in production - default dev token is insecure
AUTH_TOKENS=your-secure-token:user_1:YourName

# =================================================================
# RETRIEVER SETTINGS (optional - defaults in settings.py)
# =================================================================
# RETRIEVER_TOP_K=15
# BM25_WEIGHT=0.5
# VECTOR_WEIGHT=0.5
# RRF_K=60

# =================================================================
# QCM SETTINGS (optional - defaults in settings.py)
# =================================================================
# QCM_RETRIEVER_TOP_K=15
# QCM_ANSWER_TOP_K=5
# QCM_MAX_QUESTIONS=20

# =================================================================
# COURSE GENERATION (optional - defaults in settings.py)
# =================================================================
# COURSE_RETRIEVER_TOP_K=5
# COURSE_ENHANCER_ITERATIONS=3
# COURSE_ENHANCER_TOP_K=5

# =================================================================
# STREAMING (optional - defaults in settings.py)
# =================================================================
# STREAM_QUEUE_TIMEOUT=0.1
# STREAM_SLEEP_INTERVAL=0.01
# HEARTBEAT_INTERVAL=10


